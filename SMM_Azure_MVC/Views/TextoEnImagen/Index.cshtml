@model IEnumerable<SMM_Azure_MVC.smm.Models.TextoEnImagen>

@{
    ViewData["Title"] = "Texto en imagen";
}

<h1>Texto en imagen</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Imagen
            </th>
            <th>
                Textos
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="@item.UriImagen" width="300" height="300">
            </td>
            <td>
                <textarea class="form-control" readonly="readonly" style="height:300px;">@string.Join(Environment.NewLine, item.TextosEncontrados)</textarea>
            </td>
        </tr>
}
    </tbody>
</table>
